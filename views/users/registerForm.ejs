<html>
    <%-include('../partials/head')%>
<body>
    <%-include('../partials/header')%>
   <main>

    <div class="card-login">   
        <form form class="form-register" method="POST" action="/test/register" enctype="multipart/form-data">  
            <div class="container-register">
                <h4>Ingresa tus datos!</h4>
            </div>
                <div class="container-register">
                    <label for="mail">E-mail</label>
                    <input type="email" name="email" placeholder="Ingrese su e-mail" required>
    
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" placeholder="Ingrese contraseña" required>

                    <label for="avatar">Elige tu avatar</label><br>
                    <input class="input-register" type="file" name="avatar" accept=".jpg, .png" style="margin-bottom: 20px;" required><br>
                   
                    <label for="user_name">Nombre de usuario</label>
                    <input type="text" name="user_name" placeholder="Ingrese su nombre de usuario" required>

                    <label for="name">Nombre</label>
                    <input type="text" name="name" placeholder="Ingrese su nombre" required>

                    <label for="last_name">Apellido</label>
                    <input type="text" name="last_name" placeholder="Ingrese su apellido" required>
                    
                    <label for="birth_date">Fecha nacimiento</label>
                    <input type="date" name="birth_date" required>
                    
                    <label for="phone_number">Telefono</label>
                    <input type="number" name="phone_number" placeholder="Ingrese su telefono" required>
    
                    <div class="container-button">
                        <button type="submit">Registrame</button>
                    </div>
                    <div class="container-links-psw">
                        <ul type="none">
                            <li>Ya estas registrado?<a href="/users/login">Login</a></li>
                        </ul>
                    </div>
                </div>                
        </form>
    </div>
    
    
   </main>
</body>

<!-----------------------------Footer------------------------------------------------>
<%-include('../partials/footer')%>

</html>


