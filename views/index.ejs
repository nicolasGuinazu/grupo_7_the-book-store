<!DOCTYPE html>
<html lang="en">
<%-include('partials/head')%>

<body>
   
<%-include('partials/header')%>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="images/PremioCuentoInfantil.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="images/banner_libros.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="images/Banner3.jpg" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<main>
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" id="closebtn">&times;</a>
        <a href="/">Inicio</a>
        <a href="/products">Libros</a>
        <a href="/products/ebooks">E-books</a>
        <a href="/products/offers">Ofertas</a>
        <a href="/users/login">Iniciar Sesi√≥n</a>
        <a href="/users/register">Registrarse</a>        
    </div>
    <div class=cuerpo>
        <ul type="none">
            <li>
                <h5 class="section">OFERTAS</h5>
            </li>          
            
            <div onclick="" class="eachBook">  
                <% products.forEach(element => { %>
                   <a href="/products/detail/<%= element.idproduct%>" class="productLink" method="GET"> 
                        <article class="book">
                            <div class="details">                               
                                <img src="/images/products/<%= element.image%>"class="bookImage" alt="" width="220" height="220">
                                <div class="productDetail">
                                    <a class="price">$ <%= element.price%></a>
                                </div>                                
                                <h4 class="booksName"><%= element.name%></h4><br>
                                <h4 class="booksAuthor" name="author" id="author">Autor:  <%= element.author && element.author.name%></h4>
                            </div>
                        </article>  
                    </a>  
                <% }) %><br>   
            </div>                  
                
            <li>
                <h5 class="section">RECOMENDADOS</h5>
            </li>

            <div onclick="" class="eachBook">  
                <% products.forEach(element => { %>
                    <a href="/products/detail/<%= element.idproduct%>" class="productLink" method="GET"> 
                        <article class="book">
                            <div class="details">
                                <img src="/images/products/<%= element.image%>"class="bookImage" alt="" width="220" height="220">
                                <div class="productDetail">
                                    <a class="price">$ <%= element.price%></a>
                                 </div>                                
                                    <h4 class="booksName"><%= element.name%></h4><br>
                                    <h4 class="booksAuthor" name="author" id="author">Autor:  <%= element.author && element.author.name%></h4>
                            </div>
                        </article>  
                    </a>  
                <% }) %><br>   
            </div>                       
        </ul>    
    </div> 
   
</main>
<script src="/js/indexScript.js"></script>
