<header class="main-header">        
    <div class="head-mobile show-only-mobile">
        <div class="head-mobile-first">
            <button class="burger-button"><i class="fas fa-bars"></i></button>
            <a href="/"> <img class="logoTBS" src="/images/Logo-tbs.png" alt="Logo The Book Store"></a>
            <a href="/carrito-compra"><i class="fas fa-shopping-cart carrito"></i></a>
        </div>
        <div class="search">
            <input type="search" id="searchbar" name="searchbar" placeholder="Buscar productos">
            <button class="search-button"> <i class="fas fa-search"></i></button>
        </div>
    </div>
    <div class="head-laptop">
        <div class=logo-search-laptop>
            <a href="/"><img class="logoTBS" src="/images/Logo-tbs.png" alt="Logo The Book Store"></a>
            <div class="search">
                <input type="search" id="searchbar" name="searchbar" placeholder="Buscar productos">
                <button class="search-button"> <i class="fas fa-search"></i></button>
            </div>
            <div class="links-header">
                      
                <ul type="none">
                    <% if(locals.logged) { %>    
                    <li><a href="/users/profile"><%= locals.loggedUser.first_name %><img class="head-user-img" src="/images/users/<%= locals.loggedUser.avatar%>"></a></li>             
                    <li><a href="#">Mis Favoritos</a></li>
                    <li><a href="/carrito-compra"><i class="fas fa-shopping-cart carrito"></i></a></li>
                    <li><a href="/users/logout">Logout</a></li>
                    <% }else{%>
                    <li><a href="../users/login">Iniciar Sesión</a></li>
                    <li><a href="../users/register">Registrarse</a></li>
                    <% } %>
                </ul>
                
            </div>
        </div>
        <nav class="main-navbar-laptop">            
            <ul class="mainNav"type="none">
                <li><a href="#">Libros por Categoría</a></li>                
                <li><a href="#">E-books</a></li>
                <li><a href="#">Ofertas</a></li>
                <li><a href="#">Los más Vendidos</a></li>
                <li><a href="#">Novedades</a></li>                
            </ul>
        </nav>
    </div>
</header>